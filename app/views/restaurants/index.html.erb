<h1 class="text-center">Restaurants</h1>

<div class="row">
  <div class="col-xs-12 col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Phone number</th>
          <th>Category</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @restaurants.each do |restaurant| %>
          <tr>
            <td><%= restaurant.name %></td>
            <td><%= restaurant.address %></td>
            <td><%= restaurant.phone_number %></td>
            <td><%= restaurant.category %></td>
            <td><%= link_to restaurant, class: 'btn btn-primary btn-small' do %>
            <i class="fa fa-eye" aria-hidden="true"></i>
            <% end %>
            </td>
            <td><%= link_to edit_restaurant_path(restaurant), class: 'btn btn-warning btn-small' do %>
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            <% end %>
            </td>
            <td><%= link_to restaurant, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-small' do %>
            <i class="fa fa-trash-o" aria-hidden="true"></i>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Restaurant', new_restaurant_path, class: 'btn btn-success btn-large' %>
