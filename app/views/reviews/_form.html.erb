<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating, collection: 0..5 %>
  </div>

  <div class="form-actions">
    <%= f.submit "add a review", class: "btn btn-success btn-block" %>
  </div>
<% end %>
